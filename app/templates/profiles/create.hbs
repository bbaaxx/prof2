<h1>Creating a new profile</h1>

<div class="form-group">
  {{input
    value=name
    class="form-control"
    placeholder="Provide a name"
  }}
</div>

<div class="form-group">
  {{textarea
    value=description
    class="form-control"
    placeholder="Please enter a description"
  }}
</div>

<div class="form-group">
  <button class="btn btn-default">Select skillsets</button>
  <button class="btn btn-default">Create skillset</button>
</div>
